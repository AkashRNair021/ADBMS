SELECT * FROM Product1;

SELECT Name, City FROM Customer1;

SELECT * FROM Customer1 WHERE City = 'Kochi';

SELECT * FROM Product1 WHERE Price > 15000;

SELECT CustomerID, COUNT(*) AS TotalProducts
FROM Product1
GROUP BY CustomerID;

SELECT CustomerID, AVG(Price) AS AvgPrice
FROM Product1
GROUP BY CustomerID;

SELECT CustomerID, AVG(Price) AS AvgPrice
FROM Product1
GROUP BY CustomerID
HAVING AVG(Price) > 12000;


SELECT * FROM Product1 ORDER BY Price ASC;


SELECT * FROM Customer1 ORDER BY Name DESC;


SELECT * FROM Customer1
WHERE CustomerID IN (SELECT CustomerID FROM Product WHERE Price > 15000);


SELECT * FROM Product1
WHERE Price = (SELECT MAX(Price) FROM Product);


CREATE VIEW ProductCustomer AS
SELECT p.ProductName, p.Price, c.Name AS CustomerName
FROM Product p
JOIN Customer c ON p.CustomerID = c.CustomerID;


SELECT * FROM ProductCustomer;
